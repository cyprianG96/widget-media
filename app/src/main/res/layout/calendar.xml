<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black_70"
    tools:layout_height="370dp"
    tools:layout_width="370dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/todayDate"
                style="@style/DayDate"
                android:text="Today" />

            <TextView
                android:id="@+id/todayDateYear"
                style="@style/DayDate"
                android:text="YYYY"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/todayDayName"
            style="@style/DayLabel"
            android:layout_marginBottom="10dp"
            android:text="Today" />

        <LinearLayout
            android:id="@+id/today1"
            style="@style/EventRow"
            android:background="@drawable/event_box_small">

            <TextView
                android:id="@+id/today1_Time"
                style="@style/EventTime"
                android:text="11:00 - 12:00" />

            <ImageView style="@style/EventSeparator" />

            <TextView
                android:id="@+id/today1_Label"
                style="@style/EventLabel"
                android:text="Dentist" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/today2"
            style="@style/EventRow"
            android:background="@drawable/event_box_small">

            <TextView
                android:id="@+id/today2_Time"
                style="@style/EventTime"
                android:text="16:00 - 17:00" />

            <ImageView style="@style/EventSeparator" />

            <TextView
                android:id="@+id/today2_Label"
                style="@style/EventLabel"
                android:text="Kung-fu class" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/today3"
            style="@style/EventRow"
            android:background="@drawable/event_box_small">

            <TextView
                android:id="@+id/today3_Time"
                style="@style/EventTime"
                android:text="20:00" />

            <ImageView style="@style/EventSeparator" />

            <TextView
                android:id="@+id/today3_Label"
                style="@style/EventLabel"
                android:text="Dinner date !" />
        </LinearLayout>

        <TextView
            android:id="@+id/tommorowLabel"
            style="@style/DayLabel"
            android:layout_marginTop="14dp"
            android:text="Tommorow"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/tommorow1"
            style="@style/EventRow"
            android:alpha="0.5"
            android:background="@drawable/tommorow_event_box_small">

            <TextView
                android:id="@+id/tommorow1_Time"
                style="@style/EventTime"
                android:text="10:00" />

            <ImageView style="@style/EventSeparator" />

            <TextView
                android:id="@+id/tommorow1_Label"
                style="@style/EventLabel"
                android:text="Deadline" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
